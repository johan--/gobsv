- unless @article.nil?
  - if @article.image.present?
    .container-fluid
      .row.row-no-padding
        .col-lg-12
          %figure.cover
            = image_tag @article.image.url(:large), class: 'img-responsive'

  .container{ class: @article.image.present? ? 'headline' : nil }
    .row
      .col-xs-12
        - unless @article.pretitle.blank?
          %small
            = @article.pretitle
        %h2
          = link_to ta_article_url(@article) do
            = @article.title
        %p
          = @article.summary

- unless @articles.empty?
  .container
    .row
      - @articles.each do |article|
        .col-xs-12.col-sm-4
          %article
            - if article.image.present?
              = link_to ta_article_url(article) do
                = image_tag article.image.url(:medium), class: 'img-responsive'
            - unless @article.pretitle.blank?
              %small
                = @article.pretitle
            - else
              %br
            %h3
              = link_to ta_article_url(article) do
                = article.title

#media.container.toggable-container
  .row.row-no-padding.tabs
    .col-xs-4.col-sm-3
      = link_to '#pct', class: 'btn btn-success' do
        = image_tag 'ta/icon-pictures.png', class: 'hidden-xs'
        Fotografías
    .col-xs-4.col-sm-3
      = link_to '#aud', class: 'btn btn-warning' do
        = image_tag 'ta/icon-audios.png', class: 'hidden-xs'
        Audios

    .col-xs-4.col-sm-3
      = link_to '#vdo', class: 'btn btn-info' do
        = image_tag 'ta/icon-videos.png', class: 'hidden-xs'
        Videos

  - unless @gallery.nil?
    #pct.row.toggable
      .col-xs-12.col-sm-6
        %article
          = link_to ta_article_url(@gallery) do
            = image_tag @gallery.image.url(:medium), class: 'img-responsive'
          - unless @article.pretitle.blank?
            %small
              = @article.pretitle
          %h3
            = link_to ta_article_url(@gallery) do
              = @gallery.title
      .col-xs-12.col-sm-6
        .row
          - @galleries.each do |gallery|
            .col-xs-6
              %article
                = link_to ta_article_url(gallery) do
                  = image_tag gallery.image.url(:medium), class: 'img-responsive'
                %h3
                  = link_to ta_article_url(gallery) do
                    = gallery.title
                %p
                  = truncate gallery.summary, length: 150
      .row
        .col-xs-12
          .text-center
            = link_to galleries_ta_articles_url, class: 'btn btn-inverse' do
              Listado completo de galerías

  #aud.row.toggable
    .col-xs-12
      %br
      = render partial: 'layouts/ta/soundcloud'

  #vdo.row.toggable
    .col-xs-12
      %br
      = render partial: 'layouts/ta/youtube'

.hidden-xs
  %br
  %br
  .container
    .row
      .col-xs-12
        = render partial: 'layouts/ta/slider'

%br

#yesterday.container
  .row
    .col-xs-12
      %h4
        Noticias de ayer
  .row
    - @yesterday_articles.each do |article|
      - if @yesterday_articles.first == article
        .col-xs-12.col-sm-12.col-md-6
          %article.media
            .media-left
              = link_to ta_article_url(article) do
                = image_tag article.image.url(:small), class: 'media-object'
            .media-body
              - unless @article.pretitle.blank?
                %small
                  = @article.pretitle
              %h3
                = link_to ta_article_url(article) do
                  = article.title
      - else
        .col-xs-12.col-sm-6.col-md-3
          %article
            - unless @article.pretitle.blank?
              %small
                = @article.pretitle
            %h3
              = link_to ta_article_url(article) do
                = article.title

  .row
    .col-xs-12
      .text-center
        = link_to ta_articles_url, class: 'btn btn-inverse' do
          Listado completo de noticias

  %hr

