#header
  .container-fluid
    .row
      .col-md-3.col-md-offset-2.text-center
        = image_tag('consulta/logo.png')
        %h2
          = t('layouts.consulta.title')
        %p.title-plan
          = t('layouts.consulta.five_year_plan')
        %p.title-join.visible-lg
          = t('layouts.consulta.join_us')
      .col-md-5.text-center
        .slogan
          %h1
            = t('layouts.consulta.slogan')
          %p.slogan-description
            = t('layouts.consulta.slogan_description').html_safe
          .proposal-buttons
            = link_to t('layouts.consulta.read_proposals'), consulta_url(anchor: 'main-categories')
            = link_to '#', data: { toggle: 'modal', target: '#myModal' } do
              %i.fa.fa-play-circle-o
              = t('layouts.consulta.about')
        #myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
          .modal-dialog
            .modal-content
              .modal-header
                %button.close{"data-dismiss" => "modal", type: 'button'}
                  %span{"aria-hidden" => "true"} Ã—
                  %span.sr-only Cerrar
                %h4#myModalLabel.modal-title Plan Quinquenal de Desarrollo 2014 - 2019
              .modal-body
                .flex-video.widescreen{style: 'margin: 0 auto;text-align:center;'}
                  %iframe{allowfullscreen: '', frameborder: 0, src: 'https://www.youtube.com/embed/D04EkPJ7__Q'}
              .modal-footer
                %button.btn.btn-default{'data-dismiss' => 'modal', type: 'button'} Cerrar

  = render 'consulta/dashboard/slider'
