= render partial: 'layouts/employments/breadcrumb'
#lastjobs
  .container
    .row
      .col-xs-12
        %ul.nav.nav-tabs{role: 'tablist'}
          %li.presentation{ class: params[:q][:plaza_state_id_eq].to_i == 2 ? 'active' : nil }
            = link_to 'Empleos disponibles', employments_jobs_url(q: params[:q].try(:merge, plaza_state_id_eq: 2))
          %li.presentation{ class: params[:q][:plaza_state_id_eq].to_i == 3 ? 'active' : nil }
            = link_to 'Empleos en evaluación', employments_jobs_url(q: params[:q].try(:merge, plaza_state_id_eq: 3))
          %li.presentation{ class: params[:q][:plaza_state_id_eq].to_i == 4 ? 'active' : nil }
            = link_to 'Empleos cerrados', employments_jobs_url(q: params[:q].try(:merge, plaza_state_id_eq: 4))
    %br
    .row
      .col-xs-4
        - if @institutions.size > 0
          .institutions-list
            %ul.nav.nav-pills{role: "tablist"}
              %li{role: "presentation"}
                = link_to 'Todas las instituciones', employments_jobs_url(q: params[:q].try(:merge, institution_id_eq: nil)), title: 'Ver todas las instituciones', class: "badge", data: { toggle: 'tooltip', placement: 'top' }
              - @institutions.each do |institution|
                %li{role: "presentation"}
                  = link_to institution.institution_code, employments_jobs_url(q: params[:q].try(:merge, institution_id_eq: institution.institution_id)), title: institution.institution_name, class: "badge", data: { toggle: 'tooltip', placement: 'top' }
      .col-xs-8.dashed-border
        -#
          %h2.header-title
            = "Todos los empleos públicos disponibles"
        .job-list
          - if @jobs.count > 0
            = render collection: @jobs, partial: 'employments/public_competitions/list_public_competition'
            %center
              = will_paginate @jobs, renderer: BootstrapPagination::Rails
          - else
            .well
              Lo sentimos, no hay empleos disponibles para su búsqueda
