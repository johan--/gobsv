.modal-dialog.modal-lg{role: "document"}
  .modal-content
    .clip
      = image_tag("employments/icon-clip.png")
    .modal-body
      .job-detail
        .job-detail-header
          .row
            .col-xs-5
              .yellow
                = @job.institution_code
            .col-xs-7
              %div{id: "shareButtonLabelCount#{@job.id}"}
              :javascript
                $("#shareButtonLabelCount#{@job.id}").jsSocials({
                  url: "#{employments_job_url(@job)}",
                  text: "#{@job.post_name}",
                  showCount: true,
                  showLabel: true,
                  shares: ["twitter", "facebook", "googleplus", "linkedin"]
                })
              %h2
                = @job.post_name
        .row
          .col-xs-7
            %p
              %strong= "Descripción: "
              %br
              = @job.description
            %p
              %strong= "Mision: "
              %br
              = @job.mission

            %p
              %strong= "Funciones: "
              %br
              = @job.function

          .col-xs-5
            .well
              %h4
                Datos Generales
              %p
                = "Institución: "
                = @job.institution_name
              %p
                = "Salario: "
                = number_to_currency(@job.salary)
              %p
                = "Vacantes: "
                = @job.vacancies
              %p
                = "Correo: "
                = @job.email
              %p
                = "Direccion: "
                = @job.address
              %hr
        .row
          .col-sm-12.center-block
            .btn-toolbar{role: "toolbar"}
              .line.visible-lg-inline-block
              .btn-group{role: "group"}
                = link_to "Aplicar", "http://sapt.presidencia.gob.sv/dotacion/Default.aspx", class: "btn btn-primary"
              .line.visible-lg-inline-block
    -#
      .modal-footer
        .text-center
          = "Compartir a un amigo esta plaza. #{link_to("compartir esta plaza", nil)}".html_safe
