%section.cover-page
  .container
    %h1
      Servicios y trámites del Gobierno de El Salvador
    .row
      .col-md-12
        = search_form_for @q, url: goverment_services_institution_services_url(), html: { class: 'navbar-form' } do |f|
          .input-group
            .input-group-addon
              = icon('search')
            = f.search_field :title_cont, class: 'form-control', placeholder: 'Buscar'
    .row
      .col-md-4.col-sm-4.col-xs-12
        .item-cover-info
          = image_tag("goverment_services/icon-services.png")
          %br
          300+
          Servicios y Trámites
      .col-md-4.col-sm-4.col-xs-12
        .item-cover-info
          = image_tag("goverment_services/icon-institutions.png")
          %br
          82
          Instituciones
      .col-md-4.col-sm-4.col-xs-12
        .item-cover-info
          = image_tag("goverment_services/icon-pointer.png")
          %br
          Servicios en linea

