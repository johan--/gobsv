- if flash[:notice]
  .alert.alert-success
    = flash[:notice]
.login-container
  .flat-form
    %ul.tabs
      %li
        = link_to '#login', class: 'active' do
          = t '.login'
      %li
        = link_to '#reset' do
          = t '.reset_password'

    #login.form-action.show.animated.bounceInDown
      %h1
        = t '.login'
      %p
        = t '.welcome'
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        %ul
          %li
            = f.email_field :email, placeholder: t('.enter_email'), autofocus: true
          %li
            = f.password_field :password, autocomplete: 'off', placeholder: t('.enter_password')

        = f.submit t('.login'), class: 'button'

    #reset.form-action.hide.animated.flipInX
      %h1
        = t '.reset_password'
      %p
        = t '.reset_password_explanation'
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        %ul
          %li
            = f.email_field :email, autofocus: true, placeholder: t('.enter_email')

        = f.submit t('.send_instructions'), class: 'button'


- ['facebook', 'twitter', 'github', 'linkedin', 'google_oauth2'].each do |provider|

  - if current_user && current_user.user_authorizations.pluck(:provider).include?(provider.to_s)
    = provider.to_s.titleize
    Connected
  - else
    = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path('user', provider)

  %br
