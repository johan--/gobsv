%h1
  Mis archivos
.content
  - if @documents.size == 0
    .alert.alert-info{role: 'alert'}
      No hay archivos que mostrar
  - else
    .table-responsive
      %table.table
        %thead
          %tr
            %th
              Fecha
            %th
              Nombre de archivo
            %th
              Peso
            %th{ colspan: 2 }
        %tbody
          - @documents.each do |doc|
            %tr
              %td
                = doc.created_at.try(:strftime, '%d/%m/%Y')
              %td
                = doc.asset_file_name
              %td
                = number_to_human_size(doc.asset_file_size)
              %td
                = link_to doc.asset.url, class: 'btn btn-primary btn-sm white' do
                  %span.glyphicon.glyphicon-save-file
                  %span.hidden-xs.hidden-sm
                    Descargar
              %td
                - if doc.can_delete?
                  = link_to complaints_document_url(doc), data: { method: :delete, confirm: 'Â¿Realmente desea eliminar este documento?' }, class: 'btn btn-danger btn-sm white' do
                    %span.glyphicon.glyphicon-remove
                    %span.hidden-xs.hidden-sm
                      Eliminar
    %center
      = will_paginate @documents, renderer: BootstrapPagination::Rails
