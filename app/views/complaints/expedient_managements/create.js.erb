<% if @success %>
  $(".managements_area").prepend("<%= j render @management %>");
  $('html, body').animate({
    scrollTop: $("#management-<%= @management.id %>").offset().top
  }, 2000);
  /* clear all inputs */
  $("#complaints_expedient_management_assigned_ids").select2("val", "");
  $("#complaints_expedient_management_kind").val("");
  $("#complaints_expedient_management_comment").val("");
  $("#management-<%= @management.id %>").effect("highlight", {}, 3500);
<% else %>
  form = $("#management-<%= @management.id %>").find("form#new_complaints_expedient_management");
  errors = $.parseJSON("<%= j @errors %>");
  new ErrorDisplayer(form, errors);
<% end %>
