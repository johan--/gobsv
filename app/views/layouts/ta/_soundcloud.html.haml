- if @tracks.empty?
  %iframe{ width: "100%",
    height: "350",
    scrolling: "no",
    frameborder: "no",
    src: "https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/users/91296955&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=false&amp;show_user=true&amp;show_reposts=false" }
- else
  .row
    - @tracks.each do |track|
      .col-xs-12.col-sm-6
        .well.well-sm
          .media
            .media-left
              - if track.artwork_url.nil?
                = image_tag track.user.avatar_url, class: 'media-object'
              - else
                = image_tag track.artwork_url, class: 'media-object'

            .media-body
              .media-heading
                = track.title

              %audio{ controls: true }
                %source{ src: track.download_url + "?client_id=#{SocialKeys[Rails.env][:soundcloud_key]}", type: 'audio/mpeg' }

              %p
                = track.description.truncate(200, separator: ' ')
