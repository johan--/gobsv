!!! 5
%html{ language: I18n.locale }
  %head
    %title
      = t '.title'
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' }
    %meta{ name: 'robots', content: 'noindex' }

    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'shortcut icon' }
    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'apple-touch-icon' }
    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'apple-touch-icon-precomposed' }

    = stylesheet_link_tag :ta
    = javascript_include_tag :ta
    = csrf_meta_tags

  %body
    = render partial: 'layouts/ta/navbar'
    #wrapper
      = yield
    = render partial: 'layouts/ta/footer'
