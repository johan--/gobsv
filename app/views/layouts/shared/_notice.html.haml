- if flash[:notice]
  .alert.alert-info.alert-dismissible{ role: 'alert' }
    = flash[:notice]
    = button_tag class: 'close', data: { dismiss: 'alert' } do
      &times;
- if flash[:alert]
  .alert.alert-danger.alert-dismissible{ role: 'alert' }
    = flash[:alert]
    = button_tag class: 'close', data: { dismiss: 'alert' } do
      &times;
- if @errors.present?
  .alert.alert-danger.alert-dismissable{ role: 'alert'}
    = button_tag class: 'close', data: { dismiss: 'alert' } do
      &times;
    %ul
      - @errors.each do |msg|
        %li
          = msg
