!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= t '.title'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "consulta", :media => "all"
    = favicon_link_tag image_url('consulta/fav-144.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag image_url('consulta/fav-114.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag image_url('consulta/fav-72.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag image_url('consulta/fav-144.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag asset_url('consulta/favicon.ico'), :rel => 'shortcut icon'
    = javascript_include_tag "consulta"


  %body
    - if controller_name == 'dashboard'
      = render partial: 'shared/index_header'
    - else
      = render partial: 'shared/pages_header'
    = yield
    .container-fluid#footer
      .row
        .col-md-2.col-md-offset-2
          .goverment-slogan
            = image_tag('consulta/goverment-slogan.jpg', alt: t('layouts.consulta.title'))
        .col-md-3.text-center
          .social-media-buttons
            = link_to image_tag('consulta/facebook-icon.png', alt: 'Facebook'), "https://www.facebook.com/ConsultaSV", class: "footer-icon", title: "Facebook"
            = link_to image_tag('consulta/twitter-icon.png', alt: 'Twitter'), "https://twitter.com/ConsultaSV", class: "footer-icon", title: "Twitter"
        .col-md-3
          .goverment-info
            = t('layouts.consulta.goverment_info').html_safe
