!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= t '.title'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "consulta", :media => "all"
    = favicon_link_tag image_url('consulta/fav-144.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag image_url('consulta/fav-114.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag image_url('consulta/fav-72.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag image_url('consulta/fav-144.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag asset_url('consulta/favicon.ico'), :rel => 'shortcut icon'
    = javascript_include_tag "consulta"


  %body
    .container-fluid#header
      .row
        .col-md-2.col-md-offset-2.text-center
          = image_tag('consulta/logo.png')
          %h2
            = t '.title'
          %p.title-plan
            = t '.five_year_plan'
          %p.title-join.visible-lg
            = t '.join_us'
        .col-md-7.col-md-offset-1.text-center
          .slogan
            %h1
              = t '.slogan'
            %p.slogan-description
              = t('layouts.consulta.slogan_description').html_safe
            .proposal-buttons
              = link_to t('layouts.consulta.read_proposals'), "#"
              = link_to t('layouts.consulta.about'), "#"
    .container-fluid.download-plan
      .row
        .col-md-3.col-md-offset-2.text-center
          .download-section-1
            = image_tag('consulta/manual1.png')
        .col-md-7.text-center
          .download-section-2
            %h2.plan
              = t '.plan_title'
            %p
              = t '.plan_date'
            .download-documents
              = link_to image_tag('consulta/pdf-icon.png') + t('layouts.consulta.download_pdf'), "#", class: "pdf-icon"
              = link_to image_tag('consulta/ppt-icon.png') + t('layouts.consulta.download_ppt'), "#", class: "ppt-icon"
        .clearfix

    .container-fluid#footer