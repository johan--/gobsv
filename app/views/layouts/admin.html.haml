!!! 5
%html{ language: I18n.locale }
  %head
    %title
      = t '.title'
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' }
    %meta{ name: 'robots', content: 'noindex' }

    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'shortcut icon' }
    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'apple-touch-icon' }
    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'apple-touch-icon-precomposed' }

    = stylesheet_link_tag :admin
    = javascript_include_tag :admin

    = csrf_meta_tags
  %body
    = render partial: 'layouts/admin/navbar'
    .container-fluid
      .row
        #sidebar.hidden-xs.hidden-sm.col-md-2
          = render partial: 'layouts/admin/sidebar'
        %main#content.col-xs-12.col-sm-12.col-md-10{ data: { section: controller.controller_name }}
          = render partial: 'layouts/admin/breadcrumb' rescue nil
          = render partial: 'layouts/admin/notice'
          = yield
