.form-group
  = f.label :article_date
  = f.date_field :article_date, class: 'form-control', required: true
.form-group
  = f.label :name
  = f.text_field :name, class: 'form-control', required: true
.form-group
  = f.label :description
  = f.text_area :description, class: 'form-control', rows: 5
.form-group
  = f.label :picture
  = f.file_field :picture
  - if @item.picture.present?
    %br
    = image_tag @item.picture.url(:medium)
  .help-block
    = t '.picture_recommended_size'
