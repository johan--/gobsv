.form-group
  = f.label :name, class: 'control-label col-xs-2 col-xs-offset-2'
  .col-xs-6
    = f.text_field :name, class: 'form-control', required: true

.form-group
  = f.label :twitter, class: 'control-label col-xs-2 col-xs-offset-2'
  .col-xs-6
    = f.text_field :twitter, class: 'form-control', required: true

.form-group
  = f.label :admin_id, class: 'control-label col-xs-2 col-xs-offset-2'
  .col-xs-6
    = f.select :admin_id, @admins.map{ |admin| ["#{admin.name} (#{admin.email})", admin.id] }, { include_blank: true }, { class: 'form-control' }
