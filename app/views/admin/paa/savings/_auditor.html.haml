= field_set_tag 'General' do
  .form-group
    -#%label.control-label.col-sm-2
      -#test
    -#.col-sm-9
      -#test
  = f.select :state, options_for_select(Paa::Saving::STATE.invert, f.object.state), { include_blank: true }, { class: @institutions.count > 1 ? 'select2' : nil, required: true, disabled: is_auditor?   }
  = f.select :institution_id, @institutions.map{ |institution| [institution.name, institution.id] }, { include_blank: true }, { class: @institutions.count > 1 ? 'select2' : nil, required: true, disabled: is_auditor? }
  = f.select :financial_source_id, @financial_sources.map{ |financial_source| [financial_source.name, financial_source.id] }, { include_blank: true, required: true }, { class: 'select2', required: true, disabled: is_auditor?   }

  = f.select :trimester, options_for_select(Paa::Saving::TRIMESTER.invert, f.object.get_trimester[1]), { include_blank: true }, { class: 'select2', required: true, disabled: is_auditor?   }

  = f.select :year, options_for_select(2000..2025, f.object.get_trimester[0]), { include_blank: true }, { class: 'select2', required: true, disabled: is_auditor?   }

  -#= f.text_field :auditor_id
  = is_auditor? ? (f.text_area :audit_comment) : ""
  -#= f.text_field :audited_at
