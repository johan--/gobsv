= link_to 'Agregar', nil, class: 'add-payroll-view'
%script{ id: 'report-form-tpl', type: 'text/x-handlebars-template' }
  .template
    = form_for @payroll_view, url: admin_ofcia_payroll_views_url, method: :post, remote: true, html: { class: 'form-inline' } do |f|
      = f.select :sector_id, @sectors.map{ |s| [s.name, s.id] }, { include_blank: '-- Todos --' }, { class: 'form-control' }
      = f.select :economic_activity_group_id, @economic_activity_groups.map{ |s| [s.name, s.id] }, { include_blank: '-- Todos --' }, { class: 'form-control' }
      = f.text_field :economic_activity_id
      = f.text_field :year
      = f.text_field :month
      = f.submit
    %table.table

